<div class="show-user d-flex justify-content-center align-items-center">
  <div class="card">
    <div class="card-header">
      Profil
    </div>
    <div class="card-body">
      <div class="header d-flex justify-content-between m-4 mb-5">
        <h5 class="card-title"><%= "#{@user.first_name} #{@user.last_name}" %></h5>
        <div class="actions d-flex align-items-end flex-column">
          <%= link_to 'Modifier mes informations', edit_user_path(@user), class: 'm-1 mx-0' %>
          <%= link_to 'Modifier mon email / Mot de passe', edit_user_registration_path %>
        </div>
      </div>
      <p class="card-text m-4"><span class='text-muted'>Email : </span><%= @user.email %></p>
      <p class='card-text m-4 mb-2 text-muted'>Description :</p>
      <p class="card-text m-4 mt-2"><%= if @user.description then @user.description else 'Pas de description' end %></p>
      <p class="card-text m-4 text-muted">Evénements créés :</p>
      <% @user.administrated_events.each do |event| %>
        <div class="d-flex justify-content-center align-items-center">
          <div class="card text-center">
            <div class="card-body d-flex align-items-center justify-content-center flex-column">
              <h5 class="card-title m-4"><%= event.title %></h5>
              <p class="card-text m-4"><%= event.description %></p>
              <a href="#" class="btn btn-primary m-4">En savoir plus</a>
            </div>
            <div class="card-footer">
              <p class='text-muted'>
                <%= event.start_date.strftime("A lieu le %d/%m/%Y à ") %>
                <%= event.location %>
              </p>
              <p class='text-muted'>
                <%= "Heure : #{event.start_date.strftime("%k:%M")} - Durée : #{event.duration} minutes" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>